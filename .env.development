# =============================================================================
# PRODUCT SERVICE - DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# This file is used for development environment with enhanced security
# Copied to .env automatically by scripts/deploy.sh development

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# FastAPI application settings for development environment
ENVIRONMENT=development
DEBUG=true
APP_NAME=product-service
VERSION=1.0.0-dev

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Development server settings with hot reload enabled
HOST=0.0.0.0
PORT=8000
RELOAD=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection to development Docker infrastructure
MONGODB_URI=mongodb://admin:admin_dev_secure_789@localhost:27020/product_service_dev_db?authSource=admin
DATABASE_NAME=product_service_dev_db

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis cache connection to development Docker infrastructure (Database 5 for Product Service)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=redis_dev_secure_pass_321
REDIS_DB=5
REDIS_URL=redis://:redis_dev_secure_pass_321@localhost:6380/5

# Cache Time-To-Live settings (in seconds) - Development optimized
CACHE_TTL_PRODUCTS=900         # 15 minutes
CACHE_TTL_CATEGORIES=1800      # 30 minutes
CACHE_TTL_SEARCH=300          # 5 minutes
CACHE_TTL_REVIEWS=600         # 10 minutes

# =============================================================================
# BUSINESS LOGIC CONFIGURATION
# =============================================================================
# Product service business rules and limits for development
MAX_PRODUCTS_PER_PAGE=50
DEFAULT_PRODUCTS_PER_PAGE=20
MAX_REVIEW_LENGTH=1000
MIN_REVIEW_LENGTH=10
PRODUCT_IMAGE_MAX_SIZE=5242880  # 5MB in bytes

# =============================================================================
# SERVICE DISCOVERY CONFIGURATION
# =============================================================================
# URLs for communication with other microservices in development environment
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
ADMIN_SERVICE_URL=http://localhost:3010
AUDIT_SERVICE_URL=http://localhost:9000
INVENTORY_SERVICE_URL=http://localhost:5000

# =============================================================================
# MESSAGE BROKER CONFIGURATION
# =============================================================================
# RabbitMQ connection to development Docker infrastructure
RABBITMQ_URL=amqp://admin:rabbitmq_dev_secure_654@localhost:5673

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enhanced JWT and authentication settings for development
JWT_SECRET=dev-7a9f2d84b3c6e1f8a5d7c2b9e6f4a1d8c5b2e9f6a3d0c7b4e1f8a5d2c9b6e3f0a7
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440  # 24 hours
SECRET_KEY=product-dev-secret-key-for-development-environment

# =============================================================================
# API CONFIGURATION
# =============================================================================
# REST API settings for development environment
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3010,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=*

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Moderate rate limiting for development environment
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Enhanced logging for development debugging and monitoring
SERVICE_NAME=product-service
SERVICE_VERSION=1.0.0-dev
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/product-service-development.log

# =============================================================================
# OBSERVABILITY CONFIGURATION
# =============================================================================
# Distributed tracing for development environment monitoring
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
CORRELATION_ID_HEADER=x-correlation-id

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Product image upload settings for development
UPLOAD_DIRECTORY=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================
# Product search and filtering settings
SEARCH_RESULTS_LIMIT=100
FUZZY_SEARCH_THRESHOLD=0.7

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development environment specific settings
TESTING=false
