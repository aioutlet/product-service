{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--host", "0.0.0.0",
        "--port", "1001",
        "--reload"
      ],
      "jinja": true,
      "justMyCode": false,
      "preLaunchTask": "Start Dapr Sidecar",
      "postDebugTask": "Stop Dapr Sidecar",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal"
    }
  ]
}
