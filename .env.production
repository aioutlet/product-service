# Product Service Production Environment Configuration
# =============================================================================
# This file is used for VS Code debugging when connecting to production infrastructure
# Copied to .env automatically by scripts/deploy.sh production

# FastAPI Configuration
ENVIRONMENT=production
DEBUG=false
APP_NAME=product-service
VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database Configuration (MongoDB - connects to production Docker infrastructure)
MONGODB_URI=mongodb://admin:CHANGE_ME_SECURE_MONGODB_PASSWORD@localhost:27020/product_service_prod_db?authSource=admin
DATABASE_NAME=product_service_prod_db

# Redis Configuration (connects to production Docker infrastructure)
REDIS_HOST=localhost
REDIS_PORT=6381
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD
REDIS_DB=5
REDIS_URL=redis://:CHANGE_ME_SECURE_REDIS_PASSWORD@localhost:6381/5

# Cache TTL Configuration (seconds) - Longer for production
CACHE_TTL_PRODUCTS=1800
CACHE_TTL_CATEGORIES=3600
CACHE_TTL_SEARCH=600
CACHE_TTL_REVIEWS=1200

# Business Logic Configuration - Stricter limits for production
MAX_PRODUCTS_PER_PAGE=25
DEFAULT_PRODUCTS_PER_PAGE=10
MAX_REVIEW_LENGTH=500
MIN_REVIEW_LENGTH=20
PRODUCT_IMAGE_MAX_SIZE=2097152  # 2MB

# Service Discovery (connects to other services)
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
ADMIN_SERVICE_URL=http://localhost:3010
AUDIT_SERVICE_URL=http://localhost:9000
INVENTORY_SERVICE_URL=http://localhost:5000

# Message Broker (connects to production Docker infrastructure)
RABBITMQ_URL=amqp://admin:CHANGE_ME_SECURE_RABBITMQ_PASSWORD@localhost:5674

# Security Configuration
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_AT_LEAST_256_BITS_LONG
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=240  # 4 hours
SECRET_KEY=CHANGE_ME_PRODUCTION_PRODUCT_SECRET_KEY

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Correlation-ID

# Rate Limiting - Stricter for production
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload Configuration
UPLOAD_DIRECTORY=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# Search Configuration
SEARCH_RESULTS_LIMIT=50
FUZZY_SEARCH_THRESHOLD=0.8

# Production Settings
TESTING=false
